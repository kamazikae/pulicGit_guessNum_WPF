<Window x:Class="pulicGit_guessNum_WPF.Views.Windows.WorkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pulicGit_guessNum_WPF.Views.Windows"
        xmlns:gameviewmodels="clr-namespace:pulicGit_guessNum_WPF.ViewModels"
        mc:Ignorable="d"
        Title="WorkWindow" Height="550" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <gameviewmodels:GameViewModels/>
    </Window.DataContext>
    <Grid Background="Bisque">
        <Border Margin="30px" BorderThickness="4" BorderBrush="BurlyWood">
            <Border Background="Beige">
                <StackPanel Margin="10">
                    <TextBlock TextAlignment="Center" FontSize="40" Text="Угадай число"/>
                    <TextBlock TextAlignment="Center" FontSize="35"/>
                    <TextBlock TextAlignment="Center" Foreground="Goldenrod" FontSize="25" Text="{Binding ErrorMessage}"/>
                    <TextBox Background="Wheat" Margin="0 20 0 0" FontSize="20" Text="{Binding PeopleNumber}"/>
                    <DockPanel>
                        <TextBlock Text="{Binding Attempt, StringFormat={}{0} попыток-осталось}" HorizontalAlignment="Left" Margin="0 10 0 0" FontSize="20" />
                        <TextBlock Text="{Binding Score, StringFormat={}{0} попыток}" HorizontalAlignment="Right" Margin="0 10 0 0" FontSize="20" />
                    </DockPanel>
                    <Button Margin="0 20 0 0" Background="Bisque" Padding="3" Width="200" FontSize="20" Content="{Binding RandNumber, StringFormat={}{0} Угадать-число}" Command="{Binding GuessCommand}" IsEnabled="{Binding IsActive}"/>
                    <Button Margin="0 20 0 0" Background="Bisque" Padding="3" Width="200" FontSize="20" Content="Новая игра" Command="{Binding NewGameCommand}"/>
                </StackPanel>
            </Border>
            
        </Border>
    </Grid>
</Window>
